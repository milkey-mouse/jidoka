; security definition for one-time uniform ciphertexts
(define uniform-ctxts (fun (Σ.KeyGen Σ.Enc Σ.C)
  (interchangeable
    (lib (pow ots$-real Σ)
      (define ctxt (fun (m)
        (sample k Σ.KeyGen)
        (sample c (Σ.Enc k m))
        c))
    (lib (pow ots$-rand Σ)
      (define ctxt (fun (m)
        (sample c Σ.C)
        c)))))))
